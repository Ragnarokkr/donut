// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "active_pane_modifiers": {},
  "agent": {
    "default_model": {
      "model": "gemini-3-flash-preview",
      "provider": "google"
    },
    "default_profile": "minimal",
    "dock": "left",
    "use_modifier_to_send": true
  },
  "agent_servers": {
    "opencode": {
      "type": "registry"
    }
  },
  "auto_install_extensions": {
    "Make": true,
    "d": true,
    "docker": true
  },
  "auto_signature_help": false,
  "autosave": "off",
  "autoscroll_on_clicks": true,
  "buffer_font_family": "JetBrainsMono Nerd Font Propo",
  "buffer_font_features": {
    "zero": true
  },
  "buffer_font_size": 17.0,
  "calls": {
    "mute_on_join": true
  },
  "collaboration_panel": {
    "button": false
  },
  "colorize_brackets": true,
  "completions": {
    "lsp_insert_mode": "replace"
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": ""
      }
    }
  },
  "cursor_shape": "bar",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "disable_ai": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "git_panel": {
    "tree_view": true
  },
  "icon_theme": "Material Icon Theme",
  "indent_guides": {
    "active_line_width": 3,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "line_width": 2
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": false
  },
  "languages": {
    "C": {
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    },
    "D": {
      "format_on_save": "off",
      "tab_size": 4
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 4
    },
    "Make": {
      "hard_tabs": true,
      "tab_size": 4
    },
    "Markdown": {
      "format_on_save": "on",
      "tab_size": 4
    },
    "TypeScript": {
      "language_servers": ["tsgo", "vtsls"],
      "tab_size": 4
    }
  },
  "lsp": {
    "nu": {
      "binary": {
        "arguments": ["--lsp"],
        "path": "nu"
      }
    },
    "snippet-completion-server": {
      "settings": {
        "feature_paths": true
      }
    }
  },
  "notification_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "dock": "right",
    "hide_root": true
  },
  "redact_private_values": true,
  "restore_on_startup": "last_session",
  "seed_search_query_from_cursor": "selection",
  "show_signature_help_after_edits": true,
  "sticky_scroll": {
    "enabled": true
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "file_icons": false,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Propo",
    "font_features": {
      "zero": true
    },
    "line_height": "comfortable"
  },
  "theme": {
    "dark": "One Dark Pro",
    "light": "Ayu Light",
    "mode": "system"
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_menus": false
  },
  "toolbar": {
    "agent_review": true,
    "breadcrumbs": true,
    "code_actions": false,
    "selections_menu": true
  },
  "ui_font_family": "Inter Variable Text",
  "ui_font_features": {
    "zero": true
  },
  "ui_font_size": 17.0,
  "which_key": {
    "enabled": true
  },
  "wrap_guides": [79, 119]
}
