// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "collaboration_panel": {
    "button": false
  },
  "tab_bar": {
    "show": true
  },
  "autosave": "off",
  "colorize_brackets": true,
  "autoscroll_on_clicks": true,
  "sticky_scroll": {
    "enabled": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "redact_private_values": true,
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": ""
      }
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "auto_install_extensions": { "d": true, "docker": true, "Make": true },
  "disable_ai": false,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "calls": {
    "mute_on_join": true
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_keep_preview_on_code_navigation": true
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_menus": false
  },
  "languages": {
    "D": {
      "format_on_save": "off",
      "tab_size": 4
    },
    "Markdown": {
      "format_on_save": "on",
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    },
    "C": {
      "tab_size": 4
    },
    "JavaScript": {
      "tab_size": 4
    },
    "TypeScript": {
      "tab_size": 4,
      "language_servers": ["tsgo", "vtsls"]
    },
    "JSONC": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    }
  },
  "indent_guides": {
    "active_line_width": 3,
    "line_width": 2,
    "background_coloring": "disabled",
    "coloring": "indent_aware"
  },
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": false
  },
  "show_signature_help_after_edits": true,
  "auto_signature_help": false,
  "cursor_shape": "bar",
  "icon_theme": "Material Icon Theme",
  "inlay_hints": {
    "show_background": false,
    "enabled": true
  },
  "ui_font_size": 17.0,
  "buffer_font_size": 17.0,
  "buffer_font_family": "JetBrainsMono Nerd Font Propo",
  "buffer_font_features": {
    "zero": true
  },
  "ui_font_family": "Inter Variable Text",
  "ui_font_features": { "zero": true },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "wrap_guides": [79, 119],
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Propo",
    "line_height": "comfortable",
    "font_features": { "zero": true }
  },
  "restore_on_startup": "last_session",
  "project_panel": {
    "hide_root": true,
    "auto_fold_dirs": false,
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview"
    },
    "use_modifier_to_send": true,
    "dock": "left"
  },
  "lsp": {
    "snippet-completion-server": {
      "settings": {
        "feature_paths": true
      }
    }
  }
}
